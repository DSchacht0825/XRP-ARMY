{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "npm run server:build"
  },
  "deploy": {
    "startCommand": "npm run server:start",
    "healthcheckPath": "/api/health"
  },
  "volumes": [
    {
      "name": "database-storage",
      "mountPath": "/app/data"
    }
  ]
}